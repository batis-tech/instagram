<% post.comments.each do |comment| %>
<div class="comment">
    <%= image_tag comment.account.image.url,width:"200px", class: "img-circle comment-img" %>
<strong><%= link_to comment.account.username,profile_path(comment.account.username) %></strong>
  <%= comment.comment %>
  <p class="text-muted"><%= time_ago_in_words comment.created_at %></p>
</div>
<% end %>
